<Window x:Class="GeradeRechnungenMathe.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GeradeRechnungenMathe"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="3*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <StackPanel>
            <TextBlock Height="20" Text="erste gleichung:"/>
            <TextBlock Height="20" Text="zweite gleichung:"/>
        </StackPanel>
        <StackPanel Grid.Column="1">
            <TextBox x:Name="FirstEquationTextbox" Height="20"/>
            <TextBox x:Name="SecondEquationTextbox" Height="20"/>
            <Button Height="20" Content="berechne" Click="CalculateButtonClick"/>
            <TextBlock x:Name="OutputTextBlock" Height="20"/>
        </StackPanel>
    </Grid>
</Window>
